{
  "name": "pco-arrivals-billboard",
  "version": "1.0.0",
  "description": "PCO Arrivals Billboard Application",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "server:start": "cd server && npm start",
    "client:build": "cd client && npm run build",
    "build": "npm install && cd server && npm install && cd ../client && npm install && npm run build",
    "postinstall": "cd server && npm install && cd ../client && npm install && npm run build",
    "render-build": "npm run build && node check-build.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "connect-mongo": "^5.1.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "json2csv": "^6.0.0-alpha.2",
    "mongodb": "^6.16.0",
    "serve": "^14.2.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
