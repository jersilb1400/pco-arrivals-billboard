# Example .env file for PCO Arrivals Billboard
# Copy this file to /server/.env and fill in your actual values

# Planning Center Online API credentials
PCO_CLIENT_ID=your_pco_client_id
PCO_CLIENT_SECRET=your_pco_client_secret
PCO_ACCESS_TOKEN=your_pco_pat_token   # (if using Personal Access Token)
PCO_ACCESS_SECRET=your_pco_pat_secret # (if using Personal Access Token)

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/pco-arrivals-billboard

# Cookie/session secret
COOKIE_SECRET=your_cookie_secret_here

# The URL where your client (frontend) is hosted
CLIENT_URL=http://localhost:3000

# OAuth redirect URI (should match your PCO app settings)
REDIRECT_URI=http://localhost:3001/auth/callback

# Comma-separated list of authorized PCO user IDs (optional)
AUTHORIZED_USERS=

# Node environment (set to 'production' for production deployments)
NODE_ENV=development

# Port for the backend server (default: 3001)
PORT=3001

# Number of days to "remember me" for login sessions
REMEMBER_ME_DAYS=30